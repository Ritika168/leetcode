class Solution {
public:
    void helper(int index, vector<int>& nums, vector<int>& curr, vector<vector<int>>& ans) {
        // Base case: reached the end
        if (index == nums.size()) {
            ans.push_back(curr);
            return;
        }

        // Include nums[index]
        curr.push_back(nums[index]);
        helper(index + 1, nums, curr, ans);

        // Exclude nums[index]
        curr.pop_back();
        helper(index + 1, nums, curr, ans);
    }

    vector<vector<int>> subsets(vector<int>& nums) {
        vector<vector<int>> ans;
        vector<int> curr;
        helper(0, nums, curr, ans);
        return ans;
    }
};
