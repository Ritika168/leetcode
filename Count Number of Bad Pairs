class Solution {
public:
    long long countBadPairs(vector<int>& nums) {
        int count=0;
        int n=nums.size();
        for(int i=0;i<n-1;i++){
            for(int j=i+1;j<n;j++){
                if(i<j && j-i!= nums[j]-nums[i])
                count++;
            }
        }
        return count;
    }
};
