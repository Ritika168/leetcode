class Solution {
public:
    int numberOfAlternatingGroups(vector<int>& colors, int k) {
        int n = colors.size();
        int count = 0, l = 0;

        while (l < n) {
            int r = l + 1;

            // Expand the window while alternating colors
            while (r < l + n && colors[(r - 1) % n] != colors[r % n]) 
                r++;

            // Count valid windows of size at least k
            if (r - l >= k) 
                count += (r - l) - k + 1;

            l = r;  // Move to the next starting point
        }

        return count;
    }
};
